{
    "env": {
      "node": true,  // This tells ESLint to recognize Node.js globals
      "es6": true
    },
    "rules": {
      "no-undef": "off",  // Disables the no-undef rule for Node.js globals
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]  // Ignore unused variables with a leading underscore
    }
  }
  